@model OrderDelivery.Models.ViewModels.OrderVM

<div class="modal-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card border-0 mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Информация об отправителе</h6>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Город:</dt>
                            <dd class="col-sm-8">@Model.SenderCity</dd>
                            
                            <dt class="col-sm-4">Адрес:</dt>
                            <dd class="col-sm-8">@Model.SenderAddress</dd>
                        </dl>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card border-0 mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Информация о получателе</h6>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Город:</dt>
                            <dd class="col-sm-8">@Model.ReceiverCity</dd>
                            
                            <dt class="col-sm-4">Адрес:</dt>
                            <dd class="col-sm-8">@Model.ReceiverAddress</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="card border-0">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-box-seam me-2"></i>Характеристики груза</h6>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Вес:</dt>
                            <dd class="col-sm-8">@Model.Weight</dd>
                            
                            <dt class="col-sm-4">Дата забора:</dt>
                            <dd class="col-sm-8">@Model.PickupDate</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>