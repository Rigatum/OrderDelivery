@model OrderDelivery.Models.ViewModels.OrderVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-file-earmark-plus me-2"></i>Создать заказ №@Model.OrderNumber
                    </h3>
                </div>
                
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <input asp-for="OrderNumber" class="form-control" type="hidden" />
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SenderCity" class="form-label"></label>
                                <input asp-for="SenderCity" class="form-control" placeholder="Введите город отправителя" />
                                <span asp-validation-for="SenderCity" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="SenderAddress" class="form-label"></label>
                                <input asp-for="SenderAddress" class="form-control" placeholder="Введите адрес отправителя" />
                                <span asp-validation-for="SenderAddress" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReceiverCity" class="form-label"></label>
                                <input asp-for="ReceiverCity" class="form-control" placeholder="Введите город получателя" />
                                <span asp-validation-for="ReceiverCity" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReceiverAddress" class="form-label"></label>
                                <input asp-for="ReceiverAddress" class="form-control" placeholder="Введите адрес получателя" />
                                <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Weight" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Weight" 
                                        type="number"
                                        class="form-control" 
                                        placeholder="0"
                                        step="0.001"
                                        min="0.001"
                                        inputmode="float" />
                                    <span class="input-group-text">кг</span>
                                </div>
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="PickupDate" class="form-label"></label>
                                <input asp-for="PickupDate" type="date" asp-format="dd.MM.yyyy" class="form-control"
                                       min="@DateTime.Now.ToString("dd.MM.yyyy")" />
                                <span asp-validation-for="PickupDate" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left-circle me-2"></i>Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle-fill me-2"></i>Создать заказ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('PickupDate').min = today;
        });
    </script>
}